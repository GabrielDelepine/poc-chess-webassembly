{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "verbatimModuleSyntax": true
  },
  "exclude": ["node_modules"],
  "include": ["node_modules/**/*.js", "src/**/*.ts"],
  "lib": ["dom", "ES2022"]
}
